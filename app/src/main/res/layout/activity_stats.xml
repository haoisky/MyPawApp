<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5C167">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/analyticsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Analytics"
                android:textSize="24sp"
                android:fontFamily="@font/winter"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <!-- Summary Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_input_box"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Users"
                    android:textSize="16sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/totalUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,250"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Chart Placeholder -->
            <FrameLayout
                android:id="@+id/chartPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Chart goes here"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:background="@drawable/bg_box_container"/>
            </FrameLayout>

            <!-- Data Table Placeholder -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Data"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@drawable/bg_input_box"
                android:padding="8dp"
                android:elevation="2dp">

                <TableRow>
                    <TextView android:text="Date" android:textStyle="bold" />
                    <TextView android:text="Users" android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <TextView android:text="May 22" />
                    <TextView android:text="320" />
                </TableRow>

                <TableRow>
                    <TextView android:text="May 21" />
                    <TextView android:text="280" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        android:padding="7dp"
        android:gravity="center"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nav Buttons -->
        <ImageButton
            android:id="@+id/navPaw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/paw"
            android:scaleType="centerInside"
            android:contentDescription="@string/nav_paw" />

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/petbowl"
            android:scaleType="centerInside"
            android:contentDescription="@string/nav_home" />

        <ImageButton
            android:id="@+id/navStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/analytics"
            android:scaleType="centerInside"
            android:contentDescription="@string/nav_stats" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
